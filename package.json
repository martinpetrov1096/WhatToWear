{
  "name": "what-to-wear",
  "version": "1.0.0",
  "description": "AI-powered clothing recommendation system using ChatGPT",
  "private": true,
  "workspaces": [
    "client",
    "server"
  ],
  "scripts": {
    "dev": "concurrently \"npm run server:dev\" \"npm run client:dev\"",
    "server:dev": "npm run dev --workspace=server",
    "client:dev": "npm run dev --workspace=client",
    "server:start": "npm start --workspace=server",
    "client:build": "npm run build --workspace=client",
    "install:all": "npm install && npm install --workspace=server && npm install --workspace=client"
  },
  "keywords": [
    "chatgpt",
    "openai",
    "clothing",
    "fashion",
    "weather"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "concurrently": "^8.2.2"
  }
}
